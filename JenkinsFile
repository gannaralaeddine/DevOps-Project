pipeline {
    agent any

    stages {
        stage('Git Checkout'){
            steps {
                git branch: 'Stock-Management',
                url: "https://github.com/gannaralaeddine/DevOps-Project.git";
            }
        }

        stage('MVN Clean'){
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compiling') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Mockito / JUnit') {
            steps {
                echo 'hello'
                //sh 'mvn test'
            }
        }

        stage('SonarQube') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar';
            }
        }

        stage('Nexus') {
            steps {
                sh 'mvn deploy -DskipTests'
            }
        }
/*
        stage('Build Docker image') {
            steps {
                echo 'hello'
                sh 'docker build -t alaeddinegannar/devops .'
            }
        }

        stage ('Deploy on DockerHub'){
            steps{
                echo 'deploy'
                sh 'sudo docker login -u alaeddinegannar -p dckr_pat_b-RQvyy6nHEE9LSofhZfnmI2Y4o';
                sh 'sudo docker push alaeddinegannar/devops'
            }
        }
*/

        stage('push to dockerhub') {
            steps{
                withCredentials([string(credentialsId: 'alaeddinegannar', variable: 'dockerhub')]) {
                    sh "docker login -u alaeddinegannar -p ${dockerhub}"

                }
                sh'docker push alaeddinegannar/devops'


            }
        }

        stage ('Run Container'){
            steps{

                sh 'docker-compose up -d --build'
            }
        }
    }
}
